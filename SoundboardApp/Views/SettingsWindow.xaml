<Window x:Class="Soundboard.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        SizeToContent="WidthAndHeight"
        MinWidth="340"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow"
        Background="{StaticResource SurfaceBackgroundBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Startup" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,20"
                   Foreground="{StaticResource PrimaryTextBrush}"/>

        <!-- Settings -->
        <StackPanel Grid.Row="1">
            <!-- Start with Windows -->
            <StackPanel Margin="0,0,0,16">
                <CheckBox Content="Start with Windows" IsChecked="{Binding StartWithWindows}" Margin="0,0,0,4"/>
                <TextBlock Text="Launch Soundboard when you log in" Foreground="{StaticResource SecondaryTextBrush}" FontSize="11" Margin="20,0,0,0"/>
            </StackPanel>

            <!-- Start minimized -->
            <StackPanel Margin="0,0,0,16">
                <CheckBox Content="Start minimized to tray" IsChecked="{Binding StartMinimized}" Margin="0,0,0,4"/>
                <TextBlock Text="Hide the window on startup" Foreground="{StaticResource SecondaryTextBrush}" FontSize="11" Margin="20,0,0,0"/>
            </StackPanel>

            <!-- Close to tray -->
            <StackPanel>
                <CheckBox Content="Close to tray" IsChecked="{Binding CloseToTray}" Margin="0,0,0,4"/>
                <TextBlock Text="Minimize to tray when closing the window" Foreground="{StaticResource SecondaryTextBrush}" FontSize="11" Margin="20,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Close Button -->
        <Button Grid.Row="2" Content="Close" Width="80" HorizontalAlignment="Right" Margin="0,24,0,0" Click="CloseButton_Click"/>
    </Grid>
</Window>
