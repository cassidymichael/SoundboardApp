<Window x:Class="Soundboard.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Soundboard.ViewModels"
        xmlns:controls="clr-namespace:Soundboard.Views.Controls"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="Soundboard"
        Height="600" Width="900"
        MinHeight="500" MinWidth="750"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">

    <!-- DataContext is set in code-behind from DI container -->

    <!-- System Tray Icon -->
    <Window.Resources>
        <ContextMenu x:Key="TrayMenu">
            <MenuItem Header="Open" Click="TrayIcon_Open"/>
            <Separator/>
            <MenuItem Header="Exit" Click="TrayIcon_Exit"/>
        </ContextMenu>
    </Window.Resources>

    <Grid Margin="10,10,10,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- System Tray Icon (invisible, just for tray functionality) -->
        <tb:TaskbarIcon x:Name="TrayIcon"
                        ToolTipText="Soundboard"
                        ContextMenu="{StaticResource TrayMenu}"
                        TrayMouseDoubleClick="TrayIcon_DoubleClick"/>

        <!-- Top: Tile Grid + Editor Panel -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Tile Grid -->
            <ItemsControl Grid.Column="0" ItemsSource="{Binding Tiles}" Margin="0,0,10,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="4" Columns="4"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <controls:TileControl DataContext="{Binding}" Margin="4"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Right: Tile Editor Panel -->
            <Border Grid.Column="1" BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="4">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="12">
                    <Grid>
                        <!-- Tile Editor Section -->
                        <StackPanel Visibility="{Binding HasSelectedTile, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="Tile Settings" FontWeight="Bold" FontSize="14" Margin="0,0,0,12"/>

                            <!-- Name -->
                            <TextBlock Text="Name" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding SelectedTile.Name, UpdateSourceTrigger=PropertyChanged}"
                                     Height="26" Margin="0,0,0,10"/>

                            <!-- Sound File -->
                            <TextBlock Text="Sound File" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="{Binding SelectedTile.FileName, Mode=OneWay}"
                                         IsReadOnly="True" Height="26"/>
                                <Button Grid.Column="1" Content="..." Command="{Binding ImportSoundCommand}"
                                        Width="30" Height="26" Margin="4,0,0,0"/>
                            </Grid>

                            <!-- Hotkey -->
                            <TextBlock Text="Hotkey" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="{Binding SelectedTile.HotkeyDisplay, Mode=OneWay}"
                                         IsReadOnly="True" Height="26"/>
                                <Button Grid.Column="1" Content="{Binding LearnHotkeyButtonText}"
                                        Command="{Binding LearnHotkeyCommand}"
                                        Width="50" Height="26" Margin="4,0,0,0"/>
                            </Grid>

                            <!-- Volume -->
                            <TextBlock Text="Volume" FontWeight="SemiBold" Margin="0,0,0,4"/>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="36"/>
                                </Grid.ColumnDefinitions>
                                <Slider Grid.Column="0" Minimum="0" Maximum="100"
                                        Value="{Binding SelectedTile.VolumePercent}"
                                        VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="{Binding SelectedTile.VolumePercent, StringFormat={}{0:0}%}"
                                           VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="11"/>
                            </Grid>

                            <!-- Allow Overlap -->
                            <CheckBox Content="Allow overlap" IsChecked="{Binding SelectedTile.AllowOverlap}"
                                      Margin="0,0,0,10"/>

                            <!-- Test Button -->
                            <Button Content="Test Sound" Command="{Binding TestSoundCommand}"
                                    Height="28" Margin="0,8,0,0"/>
                        </StackPanel>

                        <!-- No Tile Selected -->
                        <TextBlock Text="Select a tile to edit"
                                   Visibility="{Binding HasSelectedTile, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                   Foreground="Gray" FontStyle="Italic"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Bottom: Output Devices + Controls -->
        <Border Grid.Row="1" BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="4" Margin="0,10,0,0" Padding="12,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Monitor Output -->
                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                    <TextBlock Text="Monitor (You Hear)" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,6"/>
                    <ComboBox ItemsSource="{Binding OutputDevices}"
                              SelectedItem="{Binding SelectedMonitorDevice}"
                              DisplayMemberPath="Name" Height="26"/>
                    <Grid Margin="0,6,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="36"/>
                        </Grid.ColumnDefinitions>
                        <Slider Grid.Column="0" Minimum="0" Maximum="100"
                                Value="{Binding MonitorVolumePercent}"
                                VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding MonitorVolumePercent, StringFormat={}{0:0}%}"
                                   VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="11"/>
                    </Grid>
                </StackPanel>

                <!-- Inject Output -->
                <StackPanel Grid.Column="1" Margin="15,0,20,0">
                    <TextBlock Text="Inject (Voicemeeter/Mic)" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,6"/>
                    <ComboBox ItemsSource="{Binding OutputDevices}"
                              SelectedItem="{Binding SelectedInjectDevice}"
                              DisplayMemberPath="Name" Height="26"/>
                    <Grid Margin="0,6,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="36"/>
                        </Grid.ColumnDefinitions>
                        <Slider Grid.Column="0" Minimum="0" Maximum="100"
                                Value="{Binding InjectVolumePercent}"
                                VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding InjectVolumePercent, StringFormat={}{0:0}%}"
                                   VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="11"/>
                    </Grid>
                </StackPanel>

                <!-- Stop All Button -->
                <Button Grid.Column="2" Content="Stop All" Command="{Binding StopAllCommand}"
                        Width="100" Height="36" VerticalAlignment="Center"
                        Background="#FFE74C3C" Foreground="White" FontWeight="SemiBold"/>
            </Grid>
        </Border>

        <!-- Status Bar (Toast) -->
        <Border Grid.Row="2" Padding="8,6" Opacity="{Binding StatusOpacity}">
            <TextBlock Text="{Binding StatusMessage}" Foreground="#FF666666" FontSize="11"/>
        </Border>
    </Grid>
</Window>
