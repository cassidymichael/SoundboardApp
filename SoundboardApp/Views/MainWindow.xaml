<Window x:Class="Soundboard.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Soundboard.ViewModels"
        xmlns:controls="clr-namespace:Soundboard.Views.Controls"
        mc:Ignorable="d"
        Title="Soundboard"
        Height="700" Width="900"
        MinHeight="500" MinWidth="750"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource WindowBackgroundBrush}"
        Closing="Window_Closing">

    <!-- DataContext is set in code-behind from DI container -->

    <Grid Margin="10,10,10,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Toolbar -->
        <Border Grid.Row="0"
                Background="{StaticResource ElevatedSurfaceBrush}"
                BorderBrush="{StaticResource BorderLightBrush}"
                BorderThickness="0,0,0,1"
                CornerRadius="4,4,0,0"
                Padding="12,8"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Large Sound Library button with icon + text -->
                <Button Grid.Column="0" Click="LibraryButton_Click"
                        Height="36" Padding="16,0"
                        ToolTip="Browse and manage your sounds">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M12,3V13.55A4,4 0 1,0 14,17V7H18V3H12M4,15A2,2 0 1,1 2,17A2,2 0 0,1 4,15Z"
                              Fill="White" Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="Sound Library" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <!-- Right: Settings + About (smaller icon buttons) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="SettingsButton" ToolTip="Settings" Width="32" Height="32"
                            Click="SettingsButton_Click" Padding="0">
                        <Path Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"
                              Fill="White" Width="16" Height="16" Stretch="Uniform"/>
                    </Button>
                    <Button x:Name="AboutButton" ToolTip="About" Width="32" Height="32" Margin="8,0,0,0"
                            Click="AboutButton_Click" Padding="0">
                        <Path Data="M11,9H13V7H11M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M11,17H13V11H11V17Z"
                              Fill="White" Width="16" Height="16" Stretch="Uniform"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Tile Grid + Editor Panel -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="200"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="280" MinWidth="200" MaxWidth="450"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Tile Grid -->
            <ItemsControl Grid.Column="0" ItemsSource="{Binding Tiles}" Margin="0,0,5,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="{Binding DataContext.GridRows, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                     Columns="{Binding DataContext.GridColumns, RelativeSource={RelativeSource AncestorType=ItemsControl}}"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <controls:TileControl DataContext="{Binding}" Margin="4"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Resizable Splitter -->
            <GridSplitter Grid.Column="1"
                          Width="6"
                          Margin="2,0"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="{StaticResource ElevatedSurfaceBrush}"
                          Cursor="SizeWE">
                <GridSplitter.Template>
                    <ControlTemplate TargetType="GridSplitter">
                        <Border Background="{TemplateBinding Background}" CornerRadius="2">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Ellipse Width="3" Height="3" Fill="{StaticResource SecondaryTextBrush}" Margin="0,1"/>
                                <Ellipse Width="3" Height="3" Fill="{StaticResource SecondaryTextBrush}" Margin="0,1"/>
                                <Ellipse Width="3" Height="3" Fill="{StaticResource SecondaryTextBrush}" Margin="0,1"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </GridSplitter.Template>
            </GridSplitter>

            <!-- Right: Tile Editor Panel -->
            <Border Grid.Column="2" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0" CornerRadius="4" Margin="8,0,0,0">
                <ScrollViewer Style="{StaticResource ThinScrollViewer}" VerticalScrollBarVisibility="Auto" Padding="12">
                    <Grid>
                        <!-- Tile Editor Section -->
                        <StackPanel Visibility="{Binding HasSelectedTile, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="Tile Settings" FontWeight="Bold" FontSize="14" Margin="0,0,0,12"
                                       Foreground="{StaticResource PrimaryTextBrush}"/>

                            <!-- Name -->
                            <TextBlock Text="Name" FontWeight="SemiBold" Margin="0,0,0,4"
                                       Foreground="{StaticResource PrimaryTextBrush}"/>
                            <TextBox Text="{Binding SelectedTile.Name, UpdateSourceTrigger=PropertyChanged}"
                                     Height="26" Margin="0,0,0,10"/>

                            <!-- Sound -->
                            <TextBlock Text="Sound" FontWeight="SemiBold" Margin="0,0,0,4"
                                       Foreground="{StaticResource PrimaryTextBrush}"/>
                            <StackPanel Margin="0,0,0,10">
                                <!-- Row 1: File name + Assign button -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" Text="{Binding SelectedTile.FileName, Mode=OneWay}"
                                             IsReadOnly="True" Height="26"/>
                                    <Button Grid.Column="1" Content="Select sound" Command="{Binding PickFromLibraryCommand}"
                                            Height="26" Margin="4,0,0,0" Padding="8,0" ToolTip="Select from Sounds Library"/>
                                </Grid>
                                <!-- Row 2: Play, Stop, Remove buttons -->
                                <Grid Margin="0,4,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" Command="{Binding TestSoundCommand}"
                                            Height="26" Padding="0" ToolTip="Play sound">
                                        <Path Data="M8,5.14V19.14L19,12.14L8,5.14Z"
                                              Fill="White" Width="12" Height="12" Stretch="Uniform"/>
                                    </Button>
                                    <Button Grid.Column="1" Command="{Binding StopCurrentCommand}"
                                            Height="26" Margin="4,0,0,0" Padding="0" ToolTip="Stop playback">
                                        <Path Data="M6,6H18V18H6V6Z"
                                              Fill="White" Width="12" Height="12" Stretch="Uniform"/>
                                    </Button>
                                    <Button Grid.Column="2" x:Name="ClearSoundButton" Click="ClearSoundButton_Click"
                                            Height="26" Margin="4,0,0,0" Padding="0"
                                            Background="#FFE74C3C" ToolTip="Remove sound">
                                        <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                                              Fill="White" Width="12" Height="12" Stretch="Uniform"/>
                                    </Button>
                                </Grid>
                            </StackPanel>

                            <!-- Hotkey -->
                            <TextBlock Text="Hotkey" FontWeight="SemiBold" Margin="0,0,0,4"
                                       Foreground="{StaticResource PrimaryTextBrush}"/>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="{Binding SelectedTile.HotkeyDisplay, Mode=OneWay}"
                                         IsReadOnly="True" Height="26"/>
                                <Button Grid.Column="1" Content="{Binding LearnHotkeyButtonText}"
                                        Command="{Binding LearnHotkeyCommand}"
                                        Width="65" Height="26" Margin="4,0,0,0"/>
                                <Button Grid.Column="2" Content="Clear"
                                        Command="{Binding ClearHotkeyCommand}"
                                        Width="65" Height="26" Margin="4,0,0,0"/>
                            </Grid>

                            <!-- Volume -->
                            <TextBlock Text="Volume" FontWeight="SemiBold" Margin="0,0,0,4"
                                       Foreground="{StaticResource PrimaryTextBrush}"/>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="36"/>
                                </Grid.ColumnDefinitions>
                                <Slider Grid.Column="0" Minimum="0" Maximum="100"
                                        Value="{Binding SelectedTile.VolumePercent}"
                                        VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="{Binding SelectedTile.VolumePercent, StringFormat={}{0:0}%}"
                                           VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="11"
                                           Foreground="{StaticResource SecondaryTextBrush}"/>
                            </Grid>

                            <!-- Stop Others -->
                            <StackPanel Margin="0,0,0,6">
                                <CheckBox Content="Stop other sounds" IsChecked="{Binding SelectedTile.StopOthers}"/>
                                <TextBlock Text="Stops any playing sounds when triggered"
                                           Foreground="{StaticResource SecondaryTextBrush}" FontSize="10" Margin="18,2,0,0"/>
                            </StackPanel>

                            <!-- Protected -->
                            <StackPanel Margin="0,0,0,10">
                                <CheckBox Content="Can't be stopped" IsChecked="{Binding SelectedTile.Protected}"/>
                                <TextBlock Text="Keeps playing when other sounds start"
                                           Foreground="{StaticResource SecondaryTextBrush}" FontSize="10" Margin="18,2,0,0"/>
                            </StackPanel>

                        </StackPanel>

                        <!-- No Tile Selected -->
                        <TextBlock Text="Select a tile to edit"
                                   Visibility="{Binding HasSelectedTile, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                   Foreground="{StaticResource MutedTextBrush}" FontStyle="Italic"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Bottom: Output Devices + Controls -->
        <Border Grid.Row="2" BorderBrush="{StaticResource BorderMediumBrush}" BorderThickness="1" CornerRadius="4" Margin="0,10,0,0" Padding="12,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Mode Toggle -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,20,0">
                    <TextBlock Text="Mode" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,6" HorizontalAlignment="Center"
                               Foreground="{StaticResource PrimaryTextBrush}"/>
                    <Border BorderBrush="{StaticResource BorderMediumBrush}" BorderThickness="1" CornerRadius="4" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="Play"
                                         IsChecked="{Binding ClickToPlayEnabled}"
                                         GroupName="TileMode"
                                         Style="{StaticResource ModeToggleStyle}"/>
                            <RadioButton Content="Edit"
                                         IsChecked="{Binding EditModeEnabled}"
                                         GroupName="TileMode"
                                         Style="{StaticResource ModeToggleStyle}"/>
                        </StackPanel>
                    </Border>
                    <TextBlock Text="{Binding ModeHelpText}"
                               FontSize="10" Foreground="{StaticResource SecondaryTextBrush}"
                               HorizontalAlignment="Center" Margin="0,2,0,0"
                               TextAlignment="Center" Width="130" Height="26"/>
                </StackPanel>

                <!-- Monitor Output -->
                <StackPanel Grid.Column="1" Margin="0,0,15,0">
                    <TextBlock Text="Monitor (You Hear)" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,6"
                               Foreground="{StaticResource PrimaryTextBrush}"/>
                    <ComboBox ItemsSource="{Binding OutputDevices}"
                              SelectedItem="{Binding SelectedMonitorDevice}"
                              DisplayMemberPath="Name" Height="26"/>
                    <Grid Margin="0,6,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="36"/>
                        </Grid.ColumnDefinitions>
                        <Slider Grid.Column="0" Minimum="0" Maximum="100"
                                Value="{Binding MonitorVolumePercent}"
                                VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding MonitorVolumePercent, StringFormat={}{0:0}%}"
                                   VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="11"
                                   Foreground="{StaticResource SecondaryTextBrush}"/>
                    </Grid>
                </StackPanel>

                <!-- Volume Link Toggle -->
                <ToggleButton Grid.Column="2"
                              IsChecked="{Binding VolumesLinked}"
                              VerticalAlignment="Bottom"
                              Margin="0,0,0,2"
                              Width="24" Height="24"
                              Cursor="Hand"
                              ToolTip="Link volume sliders">
                    <ToggleButton.Style>
                        <Style TargetType="ToggleButton">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4"
                                                Padding="4">
                                            <Path x:Name="LinkIcon"
                                                  Stretch="Uniform"
                                                  Width="14" Height="14"
                                                  Fill="{StaticResource SecondaryTextBrush}"
                                                  Data="M10.59,13.41C11,13.8 11,14.44 10.59,14.83C10.2,15.22 9.56,15.22 9.17,14.83C7.22,12.88 7.22,9.71 9.17,7.76L12.04,4.89C14,2.93 17.17,2.93 19.12,4.89C21.07,6.84 21.07,10.01 19.12,11.96L17.41,13.67C17.32,13.07 17.14,12.48 16.87,11.94L17.71,11.1C18.89,9.92 18.89,7.92 17.71,6.74C16.53,5.56 14.53,5.56 13.35,6.74L10.59,9.5C9.41,10.68 9.41,12.68 10.59,13.86L10.59,13.41M5.41,19.12C3.46,17.17 3.46,14 5.41,12.04L7.12,10.33C7.21,10.93 7.39,11.52 7.66,12.06L6.82,12.9C5.64,14.08 5.64,16.08 6.82,17.26C8,18.44 10,18.44 11.18,17.26L13.94,14.5C15.12,13.32 15.12,11.32 13.94,10.14L13.41,10.59C13,10.2 13,9.56 13.41,9.17C13.8,8.78 14.44,8.78 14.83,9.17C16.78,11.12 16.78,14.29 14.83,16.24L11.96,19.11C10.01,21.07 6.84,21.07 4.89,19.12L5.41,19.12Z"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="LinkIcon" Property="Fill" Value="{StaticResource PrimaryBrush}"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource OverlayLightBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>

                <!-- Inject Output -->
                <StackPanel Grid.Column="3" Margin="15,0,20,0">
                    <TextBlock Text="Inject (Voicemeeter/Mic)" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,6"
                               Foreground="{StaticResource PrimaryTextBrush}"/>
                    <ComboBox ItemsSource="{Binding OutputDevices}"
                              SelectedItem="{Binding SelectedInjectDevice}"
                              DisplayMemberPath="Name" Height="26"/>
                    <Grid Margin="0,6,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="36"/>
                        </Grid.ColumnDefinitions>
                        <Slider Grid.Column="0" Minimum="0" Maximum="100"
                                Value="{Binding InjectVolumePercent}"
                                VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding InjectVolumePercent, StringFormat={}{0:0}%}"
                                   VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="11"
                                   Foreground="{StaticResource SecondaryTextBrush}"/>
                    </Grid>
                </StackPanel>

                <!-- Stop All Section -->
                <StackPanel Grid.Column="4" VerticalAlignment="Center" MinWidth="200">
                    <Button Content="Stop All" Command="{Binding StopAllCommand}"
                            Height="36" HorizontalAlignment="Stretch"
                            Background="#FFE74C3C" Foreground="White" FontWeight="SemiBold"/>
                    <Grid Margin="0,6,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Text="{Binding StopAllHotkeyDisplay, Mode=OneWay}"
                                 IsReadOnly="True" Height="26"/>
                        <Button Grid.Column="1" Content="{Binding LearnStopAllHotkeyButtonText}"
                                Command="{Binding LearnStopAllHotkeyCommand}"
                                Width="55" Height="26" Margin="4,0,0,0"/>
                        <Button Grid.Column="2" Content="Clear"
                                Command="{Binding ClearStopAllHotkeyCommand}"
                                Width="55" Height="26" Margin="4,0,0,0"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Status Bar (Toast) -->
        <Border Grid.Row="3" Padding="8,6" Opacity="{Binding StatusOpacity}">
            <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource SecondaryTextBrush}" FontSize="11"/>
        </Border>
    </Grid>
</Window>
