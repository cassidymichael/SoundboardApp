<Window x:Class="Soundboard.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Soundboard.ViewModels"
        xmlns:controls="clr-namespace:Soundboard.Views.Controls"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="Soundboard"
        Height="600" Width="900"
        MinHeight="500" MinWidth="750"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">

    <!-- DataContext is set in code-behind from DI container -->

    <!-- System Tray Icon -->
    <Window.Resources>
        <ContextMenu x:Key="TrayMenu">
            <MenuItem Header="Open" Click="TrayIcon_Open"/>
            <Separator/>
            <MenuItem Header="Exit" Click="TrayIcon_Exit"/>
        </ContextMenu>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>

        <!-- System Tray Icon (invisible, just for tray functionality) -->
        <tb:TaskbarIcon x:Name="TrayIcon"
                        ToolTipText="Soundboard"
                        ContextMenu="{StaticResource TrayMenu}"
                        TrayMouseDoubleClick="TrayIcon_DoubleClick"/>

        <!-- Left: Tile Grid -->
        <Grid Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 4x4 Tile Grid -->
            <ItemsControl Grid.Row="0" ItemsSource="{Binding Tiles}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="4" Columns="4"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <controls:TileControl DataContext="{Binding}" Margin="4"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Bottom Controls -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Stop Current" Command="{Binding StopCurrentCommand}"
                        Width="100" Height="32" Margin="5,0"/>
                <Button Content="Stop All" Command="{Binding StopAllCommand}"
                        Width="100" Height="32" Margin="5,0"
                        Background="#FFE74C3C" Foreground="White"/>
            </StackPanel>
        </Grid>

        <!-- Right: Editor Panel -->
        <Border Grid.Column="1" BorderBrush="#FFCCCCCC" BorderThickness="1"
                CornerRadius="4" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Tile Editor Section -->
                <StackPanel Grid.Row="0" Visibility="{Binding HasSelectedTile, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Tile Settings" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>

                    <!-- Name -->
                    <TextBlock Text="Name" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding SelectedTile.Name, UpdateSourceTrigger=PropertyChanged}"
                             Height="28" Margin="0,0,0,12"/>

                    <!-- Sound File -->
                    <TextBlock Text="Sound File" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Text="{Binding SelectedTile.FileName, Mode=OneWay}"
                                 IsReadOnly="True" Height="28"/>
                        <Button Grid.Column="1" Content="Browse" Command="{Binding ImportSoundCommand}"
                                Width="60" Height="28" Margin="8,0,0,0"/>
                    </Grid>

                    <!-- Hotkey -->
                    <TextBlock Text="Hotkey" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Text="{Binding SelectedTile.HotkeyDisplay, Mode=OneWay}"
                                 IsReadOnly="True" Height="28"/>
                        <Button Grid.Column="1" Content="{Binding LearnHotkeyButtonText}"
                                Command="{Binding LearnHotkeyCommand}"
                                Width="60" Height="28" Margin="8,0,0,0"/>
                    </Grid>

                    <!-- Volume -->
                    <TextBlock Text="Volume" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <Slider Grid.Column="0" Minimum="0" Maximum="100"
                                Value="{Binding SelectedTile.VolumePercent}"
                                VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding SelectedTile.VolumePercent, StringFormat={}{0:0}%}"
                                   VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- Allow Overlap -->
                    <CheckBox Content="Allow overlap" IsChecked="{Binding SelectedTile.AllowOverlap}"
                              Margin="0,0,0,12"/>

                    <!-- Test Button -->
                    <Button Content="Test Sound" Command="{Binding TestSoundCommand}"
                            Height="32" Margin="0,10,0,0"/>
                </StackPanel>

                <!-- No Tile Selected -->
                <TextBlock Grid.Row="0" Text="Select a tile to edit"
                           Visibility="{Binding HasSelectedTile, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                           Foreground="Gray" FontStyle="Italic"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <Separator Grid.Row="1" Margin="0,20"/>

                <!-- Global Settings -->
                <StackPanel Grid.Row="2">
                    <TextBlock Text="Output Devices" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>

                    <!-- Monitor Output -->
                    <TextBlock Text="Monitor (You Hear)" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding OutputDevices}"
                              SelectedItem="{Binding SelectedMonitorDevice}"
                              DisplayMemberPath="Name" Height="28" Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <Slider Grid.Column="0" Minimum="0" Maximum="100"
                                Value="{Binding MonitorVolumePercent}"
                                VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding MonitorVolumePercent, StringFormat={}{0:0}%}"
                                   VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- Inject Output -->
                    <TextBlock Text="Inject (Voicemeeter/Mic)" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding OutputDevices}"
                              SelectedItem="{Binding SelectedInjectDevice}"
                              DisplayMemberPath="Name" Height="28" Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <Slider Grid.Column="0" Minimum="0" Maximum="100"
                                Value="{Binding InjectVolumePercent}"
                                VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding InjectVolumePercent, StringFormat={}{0:0}%}"
                                   VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>

                <!-- Status Bar -->
                <Border Grid.Row="3" Background="#FFF5F5F5" CornerRadius="4" Padding="8">
                    <TextBlock Text="{Binding StatusMessage}" Foreground="Gray" FontSize="11"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
