<Window x:Class="Soundboard.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Soundboard"
        SizeToContent="WidthAndHeight"
        MinWidth="280"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow"
        Background="{StaticResource SurfaceBackgroundBrush}">

    <StackPanel Margin="24" HorizontalAlignment="Center">
        <!-- App Icon Circle -->
        <Ellipse Width="48" Height="48" Fill="{StaticResource PrimaryBrush}" Margin="0,0,0,16" HorizontalAlignment="Center"/>

        <!-- App Name -->
        <TextBlock Text="Soundboard" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"
                   Foreground="{StaticResource PrimaryTextBrush}"/>

        <!-- Version -->
        <TextBlock x:Name="VersionText" Text="Version 1.0.0" Foreground="{StaticResource SecondaryTextBrush}"
                   HorizontalAlignment="Center" Margin="0,4,0,16"/>

        <!-- Copyright -->
        <TextBlock x:Name="CopyrightText" Text="Â© 2024" Foreground="{StaticResource SecondaryTextBrush}"
                   HorizontalAlignment="Center" FontSize="11"/>

        <!-- OK Button -->
        <Button Content="OK" Width="80" Margin="0,20,0,0" Click="OkButton_Click"/>
    </StackPanel>
</Window>
